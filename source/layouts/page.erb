<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || 'Middleman' %></title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
    <link href="http://fonts.googleapis.com/css?family=Cookie" rel="stylesheet" type="text/css">

    <%= stylesheet_link_tag 'header', 'site', 'footer', 'index', 'introduction', 'visions' %>
    <%= javascript_include_tag 'site', 'classie'%>
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body>
    <div class="container" style="margin-top: 15em">
      <%= partial 'partials-page/home_header' %>
      <% if current_page.data.blog == 'member'%>
        <% if current_page.data.thumbnail.present? %>
          <div class="row">
            <div class="col-4">
              <div class="img center">
                <img style="width: 100%; height: 100%; margin-top: 40px;"src="http://dev.animeoutreach.org/<%=current_page.data.thumbnail %>" />
                <p></p>
                <i><%= current_page.data.description %></i>
              </div>
            </div>
            <div class="col-1"></div>
            <div class="col-7">
              <h1><%= current_page.data.title %> | <%= current_page.data.japanese_title %></h1>
              <h3><%= current_page.data.role %></h3>
              <hr></hr>
              <!-- Member Individual Page -->
              <%= yield %>
            </div>
          </div>
        <% else %>
          <!-- Memberl List Page -->
          <%= yield %>
        <% end %>
      <% else %>
        <%= yield %> <!-- Vision or something that is not member-->
      <% end %>
    </div>
    <script>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
    <%= partial 'partials/footer_contact' %>
  </body>
</html>
